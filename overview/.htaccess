Options +FollowSymLinks
# Turn off MultiViews
Options -MultiViews

# Rewrite engine setup
RewriteEngine On

#### Rewrite rules for w3id.org/demo-resources/demo-classifications
# text/turtle
RewriteCond %{HTTP:Accept} text/turtle [NC] 
RewriteRule ^(cdvno)$  https://jimjyang.github.io/playground/cdvno/files/$1.ttl [R=302,L]
# Norwegian Bokm√•l
RewriteCond %{HTTP:Accept-Language} nb [NC]
RewriteRule ^(cdvno)$ https://jimjyang.github.io/playground/cdvno/files/$1-nb [R=302,L]
# Norwegian Nynorsk
RewriteCond %{HTTP:Accept-Language} nn [NC]
RewriteRule ^(cdvno)$ https://jimjyang.github.io/playground/cdvno/files/$1-nb [R=303,L]
# Norwegian Norsk
RewriteCond %{HTTP:Accept-Language} no [NC]
RewriteRule ^(cdvno)$ https://jimjyang.github.io/playground/cdvno/files/$1-nb [R=303,L]
# English
RewriteCond %{HTTP:Accept-Language} en [NC]
RewriteRule ^(cdvno)$ https://jimjyang.github.io/playground/cdvno/files/$1-en [R=302,L]
# English as default
RewriteRule ^(cdvno)$ https://jimjyang.github.io/playground/cdvno/files/$1-en [R=303,L] 


#### redirect to overview
RewriteRule ^$ https://jimjyang.github.io/playground/ [R=302,L]